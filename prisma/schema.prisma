generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  receipts  Receipt[]
  reports   Report[]
}

model Receipt {
  id        String   @id @default(cuid())
  userId    String
  imageUrl  String
  amount    Float?
  date      DateTime @default(now())
  category  String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Report {
  id        String   @id @default(cuid())
  userId    String
  startDate DateTime
  endDate   DateTime
  format    String
  status    String   @default("pending")
  url       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}
